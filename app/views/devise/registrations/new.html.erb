 <div class="body_entire">
  <div class ="body_flex"> 
     <div class="signup_form">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="login_title">Sign up</div>
        <div class="login_field">
          <%= f.label :ニックネーム%><br />
          <%= f.email_field :nickname, autofocus: true, autocomplete: "nickname", class: "login_content" %>
        </div>
        
        <div class="login_field">
          <%= f.label :Eメール%><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "login_content" %>
        </div>

        <div class="login_field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "password", class: "login_content"%>
        </div>

        <div class="login_field">
          <%= f.label :確認用パスワード %><br />
          <%= f.password_field :password_confirmation, autocomplete: "password", class: "login_content" %>
        </div>
        
        <div class="login_field">
          <%= f.label :苗字%><br />
          <%= f.email_field :sir_name, autofocus: true, autocomplete: "sir_name", class: "login_content" %>
        </div>

        <div class="login_field">
          <%= f.label :名前%><br />
          <%= f.email_field :first_name, autofocus: true, autocomplete: "first_name", class: "login_content" %>
        </div>

        <div class="login_field">
          <%= f.label :電話番号%><br />
          <%= f.email_field :phone_number, autofocus: true, autocomplete: "phone_number", class: "login_content" %>
        </div>
        
        <div class="login_field">
          <%= f.label :住所%><br />
          <%= f.email_field :address, autofocus: true, autocomplete: "address", class: "login_content" %>
        </div>


        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
      <% end %>

    </div>
 </div>
</div>
