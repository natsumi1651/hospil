<div class="body_entire">
  <div class ="body_flex"> 
   <div class="login_form">
   
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="login_title">Log in</div>
        <div class="login_field">
          <%= f.label :Eメール %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "login_content"%>
        </div>

        <div class="login_field">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "password", class: "login_content" %>
        </div>


        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      <% end %>
    </div>
   
  </div>
</div>
