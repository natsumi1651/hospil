<div class="body_entire">
  <div class ="body_flex"> 
   <div class="login_form">
      <%= form_with model: @user, url: user_session_path, local: true do |f| %>

        <div class="login_title">Log in</div>
        <div class="login_field">
          <%= f.label :Eメール %><br />
          <%= f.email_field :email, id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true,  class: "login_content"%>
        </div>

        <div class="login_field">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, id:"password", class: "login_content" %>
        </div>

        <div class="actions">
          <%= f.submit "Log in" %>
        </div>

      <% end %>
      
    </div>
   
  </div>
</div>
