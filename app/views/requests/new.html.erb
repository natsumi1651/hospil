 <%= form_with(model: @request, local: true) do |form| %>
      <%= form.text_field :title, placeholder: "件名" %>
      <%= form.text_field :date, placeholder: "希望日時" %>
      <%= form.text_area :description, placeholder: "主訴や、予約の内容を入れてください。", rows: "30" %>
      <%# <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %> 
      <%= form.text_field :expected_length, placeholder: "希望時間/2時間" %>
      <%= form.text_area :expected_place, placeholder: "スタッフの派遣先住所を入力してください。マイページの住所の場合は「ユーザー住所」。", rows: "10" %>
      <%= form.submit "SEND" %>
 <% end %>